<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sw.swsys"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".IntroActivity"
            android:label="@string/app_name" android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sw.swsys.MainActivity"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity android:name="com.sw.swsys.BluetoothChat" android:theme="@android:style/Theme"></activity>
        <activity android:name="com.sw.swsys.DeviceListActivity" android:theme="@android:style/Theme.NoTitleBar"></activity>
        <activity android:name="com.sw.swsys.DatabaseActivity" android:theme="@android:style/Theme.NoTitleBar"></activity>
        <activity android:name="com.sw.swsys.ListViewActivity" android:theme="@android:style/Theme.NoTitleBar"></activity>
        <activity android:name="com.sw.swsys.graph.LineGraphActivity" android:theme="@android:style/Theme.NoTitleBar"></activity>
    </application>

</manifest>